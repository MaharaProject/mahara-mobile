<?xml version='1.0' encoding='utf-8'?>
<widget id="org.mahara.mobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Mahara Mobile</name>
    <description>
      Mobile uploader for Mahara, the open-source ePortfolio.
      Mahara Mobile enables Android phones to share or upload content to a Mahara site. It allows you to:
      - upload photos from your phone
      - create journal entries on your phone
      - receive your Mahara notifications on your phone
      - create Mahara content while offline, and schedule it to upload automatically at a later time
      Mahara Mobile is an open-source project.
    </description>
    <author email="support@mahara.org" href="http://mahara.org/">
        Catalyst IT
    </author>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.CameraLauncher" />
    </feature>
    <content src="index.html" />
    <engine name="android" spec="~5.2.2" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
    <plugin name="cordova-plugin-media" spec="~2.3.0" />
    <plugin name="cordova-plugin-camera" spec="~2.3.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
    <plugin name="cordova-plugin-media-capture" spec="~1.4.0" />
    <plugin name="cordova-plugin-file" spec="~4.3.0" />
    <plugin name="cordova-plugin-device" spec="~1.1.3" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.6.0" />

    <icon platform="android" density="ldpi" src="res/icon/android/mipmap-ldpi/ic_launcher.png" />
    <icon platform="android" density="mdpi" src="res/icon/android/mipmap-mdpi/ic_launcher.png" />
