<?xml version='1.0' encoding='utf-8'?>
<widget id="org.mahara.mobile" ios-CFBundleIdentifier="mahara.mobile" version="1.1.2" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Mahara Mobile</name>
    <description>
      Mobile uploader for Mahara, the open-source ePortfolio.
      Mahara Mobile enables Android phones to share or upload content to a Mahara site. It allows you to:
      - upload photos from your phone
      - create journal entries on your phone
      - receive your Mahara notifications on your phone
      - create Mahara content while offline, and schedule it to upload automatically at a later time
      Mahara Mobile is an open-source project.
    </description>
    <author email="support@mahara.org" href="http://mahara.org/">
        Catalyst IT
    </author>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.CameraLauncher" />
    </feature>
    <content src="index.html" />
    <engine name="android" spec="~5.2.2" />
    <engine name="ios" spec="~4.3.0" />
    <engine name="browser" spec="~4.1.0" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />
    <plugin name="cordova-plugin-media" spec="~2.3.0" />
    <plugin name="cordova-plugin-camera" spec="~2.3.0" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
    <plugin name="cordova-plugin-media-capture" spec="~1.4.0">
      <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Used to upload photos to a Mahara site" />
    </plugin>
    <plugin name="cordova-plugin-file" spec="~4.3.0" />
    <plugin name="cordova-plugin-device" spec="~1.1.3" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.6.0" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.0" />
    <plugin name="cordova-plugin-globalization" spec="~1.0.4" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
    <icon density="ldpi" platform="android" src="res/icon/android/mipmap-ldpi/ic_launcher.png" />
    <icon density="mdpi" platform="android" src="res/icon/android/mipmap-mdpi/ic_launcher.png" />
    <icon density="hdpi" platform="android" src="res/icon/android/mipmap-hdpi/ic_launcher.png" />
    <icon density="xhdpi" platform="android" src="res/icon/android/mipmap-xhdpi/ic_launcher.png" />
    <icon density="xxhdpi" platform="android" src="res/icon/android/mipmap-xxhdpi/ic_launcher.png" />
    <icon density="xxxhdpi" platform="android" src="res/icon/android/mipmap-xxxhdpi/ic_launcher.png" />
    <icon height="20" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-20x20@1x.png" width="20" />
    <icon height="29" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-29x29@1x.png" width="29" />
    <icon height="40" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-40x40@1x.png" width="40" />
    <icon height="57" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-57x57@1x.png" width="57" />
    <icon height="58" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-29x29@2x.png" width="58" />
    <icon height="60" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-60x60@1x.png" width="60" />
    <icon height="76" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-76x76@1x.png" width="76" />
    <icon height="80" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-40x40@2x.png" width="80" />
    <icon height="87" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-29x29@3x.png" width="87" />
    <icon height="120" platform="ios" src="res/icon/ios/AppIcon.appiconset/Icon-App-60x60@2x.png" width="120" />
