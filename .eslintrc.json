{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": [
      "standard",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:import/errors"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 2017,
      "ecmaFeatures": {
          "jsx": true
      },
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "standard",
      "promise"
    ],
    "rules": {
        "react/display-name": 0,
        "react/no-string-refs": 0,
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "off",
        "no-console": "off",
        "no-empty": "off"
    },
    "globals": {
      // From alertify plugin
      "alertify": false,
      // From cordova-plugin-device
      "device": false,
      // From cordova core
      "cordova": false
    }
}
